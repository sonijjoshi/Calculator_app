<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Solution Display (Smaller Text) -->
    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textAlignment="viewEnd"
        android:textColor="@color/text"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        android:layout_above="@id/result_tv"/>

    <!-- Result Display (Big Text) -->
    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:textAlignment="viewEnd"
        android:textColor="@color/text"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_above="@id/buttons_layout"/>

    <!-- Buttons Layout -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/button"
        android:paddingVertical="16dp"
        android:orientation="vertical">

        <!-- First Row (C, (, ), /) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="âŒ«"
                android:textColor="@color/buttonText"
                android:textSize="27sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="("
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text=")"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="/"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />
        </LinearLayout>

        <!-- Second Row (7, 8, 9, *) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/button"
                android:text="7"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/button"
                android:text="8"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/button"
                android:text="9"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="*"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />
        </LinearLayout>

        <!-- Third Row (4, 5, 6, -) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/button"
                android:text="4"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/button"
                android:text="5"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/button"
                android:text="6"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="-"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />
        </LinearLayout>

        <!-- Fourth Row (1, 2, 3, +) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/button"
                android:text="1"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/button"
                android:text="2"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/button"
                android:text="3"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="+"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />
        </LinearLayout>

        <!-- Fifth Row (AC, 0, ., =) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="AC"
                android:textColor="@color/buttonText"
                android:textSize="18sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="0"
                android:textColor="@color/buttonText"
                android:textSize="28sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="."
                android:textColor="@color/buttonText"
                android:textSize="28sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/buttonOperator"
                android:text="="
                android:textColor="@color/buttonText"
                android:textSize="28sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
